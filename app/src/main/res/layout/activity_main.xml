<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jmfloreszazo.bmi_calculator_and401l01.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tvHeight"
        android:id="@+id/tvHeight"
        android:layout_alignBaseline="@+id/etHeight"
        android:layout_alignBottom="@+id/etHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/etHeight"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvHeight"
        android:layout_toEndOf="@+id/tvHeight"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tvWeight"
        android:id="@+id/tvWeight"
        android:layout_below="@+id/tvHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/etWeight"
        android:layout_alignBottom="@+id/etWeight" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/etWeight"
        android:layout_below="@+id/etHeight"
        android:layout_alignLeft="@+id/etHeight"
        android:layout_alignStart="@+id/etHeight"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/bComputeBMI"
        android:id="@+id/bComputeBMI"
        android:layout_below="@+id/tvWeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/etWeight"
        android:layout_alignEnd="@+id/etWeight" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvResult"
        android:layout_below="@+id/bComputeBMI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/bComputeBMI"
        android:layout_alignEnd="@+id/bComputeBMI"
        android:gravity="center" />

</RelativeLayout>
